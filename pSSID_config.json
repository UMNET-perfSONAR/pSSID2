{

  "hosts": [

    {
      "name": "rpi1",
      "batches": [
        "comprehensive-wifi"
      ],
      "data": []

    },

    {
      "name": "rpi2",
      "batches": [],
      "data": []
    },

    {
      "name": "rpi3",
      "batches": [],
      "data": [
        {"interface_wifi": "wlan0"}
      ]
    }

  ],


  "host_groups": [
    {
      "name": "hardware_rpi4",
      "hosts_regex": [ "rpi*", "raspberry*" ],
      "hosts": [ "rpi1", "rpi2", "rpi3" ],
      "batches": [],
      "data": [
        {"interface_wifi": "wlan2"}
      ]
    },

    {
      "name": "eduroam",
      "hosts_regex": [ ],
      "hosts": [],
      "batches": [],
      "data": []
    },

    {
      "name": "all",
      "hosts_regex": [ ],
      "hosts": [],
      "batches": [
        "comprehensive-wifi"
      ],
      "data": [
        {"allgroup": "true"}
      ]
    },

    {
      "name": "chem_building",
      "hosts_regex": [ ],
      "hosts": [ "rpi1", "rpi2" ],
      "batches": [
        "throughput-latency-frequent"
      ],
      "data": []
    }
],


"jobs": [

  {
    "name": "job-metrics",
    "continue-if": false,
    "tests": [
    "http-google",
    "latency-umich",
    "throughput-umich",
    "dns-cname-perfsonar"
    ]
  },

  {
    "name": "job-dot1x-mwireless",
    "tests": [
      "dot1x-mwireless"
    ],
    "continue-if": true
  },

  {
    "name": "job-dot1x-eduroam",
    "tests": [
      "dot1x-eduroam"
    ],
    "continue-if": true
  },

  {
    "name": "job-dhcp-wifi",
    "tests": [
      "example_test_dns_aaaa"
    ],
    "continue-if": true
  }

],


"batches": [
  {
    "name": "comprehensive-wifi",
    "priority": 1,
    "ttl": 180,
    "SSID-profiles": [
      "MWireless_profile"
    ],
    "schedule": [
      "schedule_every_5_min"
    ],
    "jobs": [
      "job-dot1x-mwireless",
      "job-dhcp-wifi"
    ],
    "archivers": [
      "example_rabbitmq_archive"
    ]
  },
  {
    "name": "throughput-latency-frequent",
    "priority": 1,
    "ttl": 180,
    "SSID-profiles": [
        "MWireless_profile"
    ],
    "schedule": [
      "schedule_every_10_min"
    ],
    "jobs": [
      "job-dhcp-wifi"
    ],
    "archivers": [
      "example_syslog_archive"
    ]
  }
],

"archivers": [
  {
    "name": "example_rabbitmq_archive",
    "archiver": "rabbitmq",
    "data": {
        "_url": "amqp://elastic:elastic@pssid-elk.miserver.it.umich.edu",
        "routing-key": "pscheduler_raw"
    }
  },
  {
    "name": "example_syslog_archive",
    "archiver": "syslog",
    "data": {
        "ident": "pSSID22 result",
        "facility" : "local3"
    }
  }
],


"tests": [
  {
    "name": "dot1x-mwireless",
    "type": "dot1x",
    "spec": {
    "interface": "JQ .interface_wifi",
    "ssid": "MWireless",
    "key-management":"WPA-EAP"    
    }
  },

  {
    "name": "dot1x-eduroam",
    "type": "dot1x",
    "spec": {
    "interface": "JQ .interface_wifi",
    "ssid": "eduroam",
    "key-management":"WPA-EAP",
    "obscure_option": "parameter",
    "reason": "LHC throughput",
    "lhs": "rhs"
    }
  },

  {
    "name": "dhcp-wifi",
    "type": "dhcp",
    "spec": {
      "interface": "JQ .interface_wifi"
    }
  },

  {
    "name": "http-google",
    "type": "http",
    "spec": {
      "url": "www.google.com"
    }
  },

  {
    "name": "latency-umich",
    "type": "latency",
    "spec": {
      "dest": "www.umich.edu"
    }
  },

  {
    "name": "throughput-umich",
    "type": "throughput",
    "spec": {
      "dest": "perfsonar-bin-arbl.umnet.umich.edu"
    }
  },

  {
    "name": "dns-cname-perfsonar",
    "type": "dns",
    "spec": {
    "query": "www.perfsonar.net",
    "record": "cname"
    }
  },

  {
    "name": "example_test_rtt",
    "type": "rtt",
    "spec": {
        "dest": "www.umich.edu"
    }
  },

  {
    "name": "example_test_latency",
    "type": "latency",
    "spec": {
        "dest": "perfsonar-bin-arbl.umnet.umich.edu"
    }
  },

  {
    "name": "example_test_throughput_ul",
    "type": "throughput",
    "spec": {
        "dest": "perfsonar-bin-arbl.umnet.umich.edu"
      }
  },

  {
    "name": "example_test_throughput_dl",
    "type": "throughput",
    "spec": {
        "source": "perfsonar-bin-arbl.umnet.umich.edu"
    }
  },

  {
    "name": "example_test_http_umich",
    "type": "http",
    "spec": {
        "url": "http://umich.edu"
    }
  },

  {
    "name": "example_test_http_google",
    "type": "http",
    "spec": {
        "url": "http://google.com"
    }
  },

  {
    "name": "example_test_dns_a",
    "type": "dns",
    "spec": {
        "query": "www.umich.edu",
        "record": "a"
    }
  },

  {
    "name": "example_test_dns_aaaa",
    "type": "dns",
    "spec": {
        "query": "www.umich.edu",
        "record": "aaaa"
    }
  }
],

"schedules": [
    {
    "name": "schedule_every_1_min",
    "repeat": "*/1 * * * *"
    },

    {
  "name": "schedule_every_5_min",
  "repeat": "*/5 * * * *"
    },

    {
  "name": "schedule_every_10_min",
  "repeat": "*/10 * * * *"
    },

    {
  "name": "schedule_every_1_hour",
  "repeat": "0 * * * *"
    }, 

    {
  "name": "schedule_every_2_hours",
  "repeat": "0 */2 * * *"
    },

    {
  "name": "schedule_every_4_hours",
  "repeat": "0 */4 * * *"
    }, 

    {
  "name": "schedule_every_5_hours",
  "repeat": "0 */5 * * *"
    },  

    {
  "name": "schedule_Tuesday_10AM",
  "repeat": "0 10 * * 2"
    },   

    {
  "name": "schedule_Tuesday_10:10AM",
  "repeat": "10 10 * * 2"
    }        

],

"SSID_profiles" : [
  {
    "name": "MWireless_profile",
    "SSID": "MWireless",
    "min_signal": -73
  },

  {
    "name": "EduRoam_profile",
    "SSID": "eduroam",
    "min_signal": -70
  }
]

}
